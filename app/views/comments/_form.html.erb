<% if can? :create, comment %>
  <%= form_for comment, url: article_comments_path(@user.username, @article, comment)  do |f| %>
    <%= render "shared/validation_errors", :model => comment %>

    <div class="field">
      <%= f.text_area :text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>