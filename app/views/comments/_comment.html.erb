
<%= simple_format comment.text %>
<%=t 'published_by'%> <%= link_to comment.user.username, articles_path(comment.user.username)%>

<%if can? :destroy , comment %>
  <%= link_to t('destroy'),
              article_comment_path(comment.article.user.username, comment.article, comment),
              method: :delete,
              data: { confirm: t('are_you_sure') } %>
<% end %>

<%if can? :report , comment %>
  <%= link_to t('report'),
              report_article_comment_path(comment.article.user.username,   comment.article, comment),
              :method => :post %>
<% end %>

<% if comment.report_count > 0%>
  (<%=t 'number_of_reports'%>: <%= comment.report_count %> )
<% end %>

