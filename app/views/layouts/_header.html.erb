<div class="header">
  <%= link_to "Home", root_path %>

  <% if current_user %>
    <%= link_to "Mon Blog (#{current_user.username})", articles_path(current_user.username) %>
    <%= link_to 'Settings', edit_user_path %>
    <%=link_to 'Log out', destroy_user_session_path, :method => :delete %>
  <% else %>
    <%=link_to 'Log in', new_user_session_path%>
    <%=link_to 'Sign up', new_user_registration_path %>
  <% end %>
</div>

<div class="featured-blogs">
  Featured blogs :
  <% @featured_users.each do |user| %>
      <%= link_to user.username, articles_path(user.username) %>
  <% end %>
</div>